@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2> 
<h3>@Html.DisplayFor(model => model.Name)</h3>
<h4>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h4>

<h4>Clients</h4>
@if (Model.Clients.Count == 0)
{
  <p>@Html.DisplayFor(model => model.Name) currently has no clients.</p>
}
@foreach (Client client in Model.Clients)
{
  <p>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId})</p>
}

<button>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</button>
<button>@Html.ActionLink("Remove Stylist", "Delete", new { id = Model.StylistId})</button>