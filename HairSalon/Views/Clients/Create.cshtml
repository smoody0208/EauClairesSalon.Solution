@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Add a new client!</h2>
<hr>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.ContactInfo)
  @Html.TextBoxFor(model => model.ContactInfo)
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br>
  <br>
<input type="submit" value="Add New Client" class="btn btn-info btn-lg">
}